@using UTIL.Models;
@using NotaVenta.UTIL;
@{
    ViewBag.Title = "Mis Clientes";
    List<ClientesModels> clientes = ViewBag.clientes;
    var validacion = "$0";

    if (((BaseController)this.ViewContext.Controller).codigoVendedorUsuario() == null)
    {
        var URL = System.Configuration.ConfigurationManager.AppSettings.Get("url");
        Response.Redirect(URL);
    }
}

<link href="~/Scripts/css/estilotables.css" rel="stylesheet" />
<script src="~/WebJs/Venta/MisClientes.js"></script>
<style>
    .rojomaldito {
        background: #E49685;
        color: black;
    }
</style>
<body class="contact-page">
<div id="ModalMap" class="wrap-body">
        <section id="container">
            <div class="wrap-container">
                <div class="panel panel-inverse width-full">
                    <div class="panel-heading">
                        <h4 class="panel-title">Listado De Clientes</h4>
                        <div class="panel-heading-btn">
                            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                        </div>
                    </div>
                    <div class="zerogrid">
                        <div class="row">
                            @Html.Raw(TempData["Mensaje"])
                            <div class="col-full">
                                <div class="table-responsive2">
                                    <div style="text-align:right;padding-right:30px;padding-top:10px;">
                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#AgregarCliente">Agregar Cliente</button>
                                        <br />
                                        <br />
                                    </div>
                                    <div class="wrap-col">
                                        <table id="dataTable" class="table2" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <th>CodAux</th>
                                                    <th>Cliente</th>
                                                    <th>Dirección</th>
                                                    <th>Telefono</th>
                                                    <th>Notas</th>
                                                    <th>Deuda Vencida</th>
                                                    <th>Deuda Total</th>
                                                    <th>Linea Credito</th>
                                                    <th>Nota de Venta</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            @{
                                                try
                                                {
                                                    for (int i = 0; i < clientes.Count; i++)
                                                    {
                                                        <tr>
                                                            @if (clientes[i].Credito == validacion || clientes[i].Credito == null)
                                                            {
                                                                <td class="rojomaldito">@clientes[i].CodAux</td>
                                                                <td class="rojomaldito">@clientes[i].NomAux</td>
                                                                <td class="rojomaldito">@clientes[i].DirAux @clientes[i].DirNum</td>
                                                                <td class="rojomaldito">@clientes[i].FonAux1</td>


                                                                if (clientes[i].Notas == null)
                                                                {
                                                                    <td class="rojomaldito">No cuenta con nota</td>
                                                                }
                                                                else
                                                                {
                                                                    <td class="rojomaldito">@clientes[i].Notas</td>
                                                                }

                                                                <td class="rojomaldito"> $ @clientes[i].Deuda</td>
                                                                <td class="rojomaldito"> @clientes[i].DeudaVencida</td>
                                                                <td class="rojomaldito">
                                                                    <!--<input  type="button" value="Deuda" id="deuda"/>-->
                                                                    <!--<a id="iframe" href='@Url.Action("DeudaCliente", "Ventas", new { codigo = @clientes[i].CodAux})'>Deuda</a> -->
                                                                    @clientes[i].Credito
                                                                </td>
                                                                <td class="rojomaldito">
                                                                    @*<a href='@Url.Action("NotadeVenta", "Ventas", new { CodAux = @clientes[i].CodAux, NomAux = @clientes[i].NomAux, anterior = "1" })'><img src="~/Image/guia.png"></a>*@
                                                                </td>

                                                            }
                                                            else
                                                            {
                                                                <td>@clientes[i].CodAux</td>
                                                                <td>@clientes[i].NomAux</td>
                                                                <td>@clientes[i].DirAux @clientes[i].DirNum</td>
                                                                <td>@clientes[i].FonAux1</td>


                                                                if (clientes[i].Notas == null)
                                                                {
                                                                    <td>No cuenta con nota</td>
                                                                }
                                                                else
                                                                {
                                                                    <td>@clientes[i].Notas</td>
                                                                }

                                                                <td> $ @clientes[i].Deuda</td>
                                                                <td> @clientes[i].DeudaVencida</td>
                                                                <td>
                                                                    <!--<input  type="button" value="Deuda" id="deuda"/>-->
                                                                    <!--<a id="iframe" href='@Url.Action("DeudaCliente", "Ventas", new { codigo = @clientes[i].CodAux})'>Deuda</a> -->
                                                                    @clientes[i].Credito
                                                                </td>
                                                                <td>
                                                                    <a href='@Url.Action("PreNotadeVenta", "Venta", new { CodAux = @clientes[i].CodAux, NomAux = @clientes[i].NomAux, anterior = "1" })'><img src="~/Content/Image/guia.png" /></a>
                                                                </td>

                                                            }

                                                        </tr>
                                                    }
                                                }
                                                catch (Exception)
                                                {
                                                    <tr>
                                                        <td></td>
                                                        <td></td>
                                                        <td>Este Usuario no tiene Clientes Asociados</td>
                                                        <td></td>
                                                        <td></td>
                                                    </tr>
                                                }
                                            }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                    </div>
                </div>
            
                </div>
</section>
    </div>

<div id="AgregarCliente" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Agregar Cliente</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="x_content">
                    <br />
                    <div class="form-horizontal form-label-left input_mask">
                        <input type="hidden" name="txtcodAux" id="CodAuxMod">
                        <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
                            <label class="control-label"><b>Nombre: </b></label>
                            <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
                            <input type="text" required="required" class="form-control has-feedback-left" id="NombreCli" name="txtUsuario" placeholder="Nombre">
                        </div>

                        <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
                            <label class="control-label"><b>Rut: </b></label>
                            <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
                            <input type="text" required="required" class="form-control has-feedback-left" id="RutCli" name="txtNombre" placeholder="Rut" oninput="checkRut(this)" maxlength="13">
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
                            <label class="control-label"><b>Email: </b></label>
                            <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
                            <input type="email" required class="form-control" id="EmailMod" name="EmailCli" placeholder="Email">
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
                            <label class="control-label"><b>Telefono: </b></label>
                            <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
                            <input type="tel" required class="form-control" id="TelefonoCli" name="Telefono" placeholder="Telefono">
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
                            <label class="control-label"><b>Direccion: </b></label>
                            <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
                            <input type="text" required class="form-control" id="DireccioCli" name="Direccion" placeholder="Direccion">
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <label class="control-label"><b>Giro Cliente: </b></label>
                            @Html.DropDownList("GirAux", (IEnumerable<SelectListItem>)ViewBag.Giro, "Seleccione Giro", new { @class = "form-control", @id = "GirAux", @name = "GirAux" })
                        </div>
                        <br />
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <label class="control-label"><b>Ciudad Cliente: </b></label>
                            @Html.DropDownList("CiuAux", (IEnumerable<SelectListItem>)ViewBag.Ciudad, "Seleccione Ciudad", new { @class = "form-control", @id = "CiuAux", @name = "CiuAux" })
                        </div>
                        <br />
                        <br />
                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
                                <button class="btn btn-success" type="submit" id="AgregarCliente" onclick="AgregarCliente()">Grabar</button>
                                <button class="btn btn-primary" type="reset">Resetear</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnCerrarModal" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
</body>