@using UTIL.Models;
@{
                /**/

                ViewBag.Title = "Parametros";
                ParametrosModels parametros = ViewBag.Parametros;
}


<style>
    table {
        border-collapse: collapse;
        border-spacing: 0;
        height: 80%;
        width: 100%;
    }

    th, td {
        border: 3px;
        text-align: center;
        padding: 3px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }
</style>

<div class="row">
    <div class="row col-lg-2">
    </div>
    <div class="row col-lg-8">
        <div class="col-lg-12">
            <div class="panel panel-inverse" data-sortable-id="ui-widget-1">
                <div class="panel-heading">
                    <h4 class="panel-title">Parametros</h4>
                    <div class="panel-heading-btn">
                        <!--<a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>-->
                        <!--<a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-redo"></i></a>-->
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                        <!--<a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>-->
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-4">Envio Obligatorio Aprobador</div>
                        <div class="col-lg-8">
                            <div class="switcher">
                                <input type="checkbox" switcher name="EnvioObligatorioAprobador" id="EnvioObligatorioAprobador" @Html.Raw(parametros.EnvioObligatorioAprobador ? "checked" : "")>
                                <label for="EnvioObligatorioAprobador"></label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row col-lg-2">
    </div>
</div>

<script src="~/WebJs/Administracion/Parametros.js"></script>